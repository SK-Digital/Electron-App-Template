{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "A basic Electron app with Tailwind CSS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:css": "tailwindcss -i src/assets/styles/styles.css -o src/assets/styles/output.css",
    "watch:css": "tailwindcss -i src/assets/styles/styles.css -o src/assets/styles/output.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run start\"",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^x.x.x",
    "tailwindcss": "^x.x.x",
    "@electron-forge/cli": "^6.x.x",
    "@electron-forge/maker-squirrel": "^6.x.x",
    "@electron-forge/maker-zip": "^6.x.x",
    "@electron-forge/maker-deb": "^6.x.x",
    "@electron-forge/maker-rpm": "^6.x.x"
  },
  "dependencies": {
    "electron-forge": "^5.2.4"
  }
}
